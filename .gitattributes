# Default behavior: normalize line endings to LF
* text=auto eol=lf

# Terraform files
*.tf text eol=lf
*.tfvars text eol=lf
*.hcl text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
.pre-commit-config.yaml text eol=lf

# Documentation
*.md text eol=lf

# Scripts
*.sh text eol=lf
*.ps1 text eol=crlf

# Docker
Dockerfile text eol=lf
*.dockerfile text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf
